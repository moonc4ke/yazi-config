[manager]
sort_by        = "mtime"
sort_reverse   = true
sort_dir_first = true
linemode       = "size"
show_hidden    = true
show_symlink   = true

[preview]
wrap       = "no"
tab_size   = 2
max_width  = 600
max_height = 900

[opener]
edit = [
	{ run = 'nvim "$@"', block = true, desc = "Edit with nvim" },
	{ run = '$EDITOR "$@"', block = true, desc = "Edit with $EDITOR" },
]
